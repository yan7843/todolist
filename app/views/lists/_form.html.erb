<div class="form container">
  <%= form_for @list do |f| %>
    <div class="form-group">    
      <%= f.label :name, "Name" %>
      <%= f.text_field :name, class: "form-control" %>
    </div>
    <div class="form-group">
      <%= f.label :date, "Date" %>
      <%= f.text_field :date, class: "form-control" %>
    </div>
    <div class="form-group">
      <%= f.label :note, "Note" %>
      <%= f.text_area :note, class: "form-control" %>
    </div>

    <%= f.submit %>
  <% end %>
</div>