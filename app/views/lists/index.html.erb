<h1><%= 'To Do List' %></h1>

<style>
  .table > tbody > tr > td {
     vertical-align: middle;
     width: 20%;
  }

</style>

<table class="table table-striped table-condensed">
    <tr>
      
      <td><%= '待辦事項名稱' %></td>    
      <td><%= '必須完成時間' %></td>
      <td><%= '其他說明' %></td>
      <td><%= '編輯' %></td>
      <td><%= '刪除' %></td>
    </tr>
</table>

<table class="table table-striped table-condensed">

  <% @lists.each do |list| %>
    <tr>

      <td><%= check_box_tag :is_public, true , list.is_public, data: { url: is_public_list_path(list), method: :post, remote: true } %>
 &nbsp <%= link_to list.name, list_path(list) %></td>   
      <td><%= list.date %></td>
      <td><%= list.note %></td>
      <td><%= link_to 'Edit', edit_list_path(list) %></td>
      <td><%= link_to 'Destroy', list_path(list), method: :delete, data:{ confirm: "Are you sure?" } %></td>
    </tr>
  <% end %>


</table>



<%= link_to 'New List', new_list_path %>